# Swarm Pulse Configuration
# Copy this file to config.ini and set your log file path

[DEFAULT]
# Path to your CodeZero node log file
# 
# Common locations (check these first):
#   ~/.codezero/logs/node.log
#   ~/codezero/logs/node.log
#   /var/log/codezero/node.log
#   /opt/codezero/logs/node.log
#
# To find your log file, run: ./find_log.sh
#
log_file_path = 

# Auto-start monitoring on launch (true/false)
auto_start = false

# Auto-refresh interval in seconds (1-10)
refresh_interval = 2
